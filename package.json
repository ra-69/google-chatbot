{
  "name": "google-chatbot",
  "version": "1.0.0",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "build": "tsc",
    "dev": "npm run build && npx @google-cloud/functions-framework --target=chatBot",
    "deploy": "gcloud functions deploy chatBot --gen2 --runtime=nodejs22 --region==us-central1 --source=. --entry-point=chatBot --trigger-http --allow-unauthenticated",
    "ngrok": "ngrok http 8080",
    "ngrok:andrei": "ngrok http 8080 --url https://kingfish-literate-poodle.ngrok-free.app"
  },
